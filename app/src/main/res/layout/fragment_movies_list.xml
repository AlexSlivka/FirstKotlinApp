<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_background">

    <TextView
        android:id="@+id/movies_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:drawablePadding="@dimen/space_2x"
        android:text="@string/movies_list"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white_basic"
        android:drawableStart="@drawable/ic_aim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/central_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierHorizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/space_2x"
        app:constraint_referenced_ids="movies_list_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/film_card_outline_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/film_card_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/central_guideline"
        app:layout_constraintTop_toTopOf="@id/barrierHorizontalTop"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginEnd="@dimen/space_1x"
        android:layout_marginTop="@dimen/space_2x"/>

    <ImageView
        android:id="@+id/poster_avengers_end_game_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/poster_avengers_end_game"
        app:layout_constraintStart_toStartOf="@id/film_card_outline_imageView"
        app:layout_constraintEnd_toEndOf="@id/film_card_outline_imageView"
        app:layout_constraintTop_toTopOf="@id/film_card_outline_imageView"
        android:elevation="@dimen/space_1x"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/rectangle_age_limit_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rectangle"
        android:elevation="@dimen/space_2x"
        app:layout_constraintStart_toStartOf="@id/poster_avengers_end_game_imageView"
        app:layout_constraintTop_toTopOf="@id/poster_avengers_end_game_imageView"
        android:layout_marginTop="@dimen/space_2x"
        android:layout_marginStart="@dimen/space_2x"/>

    <TextView
        android:id="@+id/age_limit_on_poster_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_limit"
        android:textColor="@color/white_basic"
        android:textStyle="bold"
        android:elevation="@dimen/space_3x"
        android:paddingTop="@dimen/space_1x"
        android:paddingBottom="@dimen/space_1x"
        app:layout_constraintStart_toStartOf="@id/rectangle_age_limit_imageView"
        app:layout_constraintEnd_toEndOf="@id/rectangle_age_limit_imageView"
        app:layout_constraintTop_toTopOf="@id/rectangle_age_limit_imageView"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_age_limit_imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>